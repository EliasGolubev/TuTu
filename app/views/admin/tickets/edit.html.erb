<h3>Изменение билет</h3>
<%= form_for [:admin, @ticket] do |f| %>
  
  <div class="field">
    <%= f.label :fullname, "ФИО" %>
    <%= f.text_field :fullname %>
  </div>

  <div class="field">
    <%= f.label :passport_number, 'Номер паспорта' %>
    <%= f.text_field :passport_number %>
  </div>

  <div class="field">
    <%= f.label :train_id %>
    <%= f.collection_select :train_id, Train.all, :id, :number %>
  </div>

  <div class="field">
    <%= f.label :first_station_id %>
    <%= f.collection_select :first_station_id, RailwayStation.all, :id, :title %>
  </div>

  <div class="field">
    <%= f.label :last_station_id %>
    <%= f.collection_select :last_station_id, RailwayStation.all, :id, :title %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>

<%= link_to "Список билетов", admin_tickets_path %>