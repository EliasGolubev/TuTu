<%= form_for [@train, @wagon] do |f| %>
  
   <%= render 'common/errors', resource: @wagon %>

  <div class="field">
    <%= f.label :type %>
    <%= f.select :type, [CoupeWagon.name, EconomyWagon.name, SVWagon.name, SittingWagon.name] %>
  </div>

  <div class="field">
    <%= f.label :top_seats, "Количество верхних мест:" %>
    <%= f.number_field :top_seats %>
  </div>

  <div class="field">
    <%= f.label :lower_seats, "Количество нижних мест:" %>
    <%= f.number_field :bottom_seats %>
  </div>

  <div class="field">
    <%= f.label :side_top_seats, "Количество верхних боковых мест:" %>
    <%= f.number_field :side_top_seats %>
  </div>

  <div class="field">
    <%= f.label :side_bottom_seats, "Количество нижних боковых мест:" %>
    <%= f.number_field :side_bottom_seats %>
  </div>

  <div class="field">
    <%= f.label :sitting_seats, "Количество сидячих мест:" %>
    <%= f.number_field :sitting_seats %>
  </div>

  <div class="actions">
    <%= f.submit "#{@wagon.new_record? ? 'Создать' : 'Изменить'}" %>
  </div>
<% end %>