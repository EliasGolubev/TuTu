<%= form_for(@wagon) do |f| %>
  
   <%= render 'common/errors', resource: @wagon %>

  <div class="field">
    <%= f.label :wagon_type, "Тип вагона" %>
    <%= f.text_field :wagon_type %>
  </div>

  <div class="field">
    <%= f.label :top_seats, "Количество верхних мест:" %>
    <%= f.text_field :top_seats %>
  </div>

  <div class="field">
    <%= f.label :lower_seats, "количество нижних мест:" %>
    <%= f.text_field :lower_seats %>
  </div>

  <div class="actions">
    <%= f.submit "#{@wagon.new_record? ? 'Создать' : 'Изменить'}" %>
  </div>
<% end %>